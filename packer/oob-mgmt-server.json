{
    "variables": {
      "ansible_version": "2.4.1.0",
      "iso_url": "https://d2cd9e7ca6hntp.cloudfront.net/public/CumulusLinux-3.7.11/cumulus-linux-3.7.11-vx-amd64-qemu.qcow2",
      "iso_checksum": "C00E0B1C70B53B5A08F2F53ECB7AB88B8641EBAF103A76EC74DA9E6E430BBD9A",
      "ssh_username": "cumulus",
      "ssh_password": ""
    },
    "builders":
    [
      {
        "accelerator": "none",
        "boot_wait": "3s",
        "disk_image": true,
        "format": "qcow2",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_url": "{{user `iso_url`}}",
        "shutdown_command": "sudo -S shutdown -P now",
        "ssh_password": "{{user `ssh_password`}}",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_timeout": "20m",
        "type": "qemu",
        "use_default_display": true,
        "qemuargs": [
            ["-smp", "2"],
            ["-m", "1024"],
            ["-enable-kvm"]
        ],
        "vm_name": "oob-mgmt-server.qcow2"
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "../roles/prepare-oob-server/files/jessie.list",
        "destination": "/tmp/jessie.list"
      },
      {
        "type": "file",
        "source": "./artifacts/id_rsa.pub",
        "destination": "/tmp/authorized_keys"
      },
      {
        "type": "file",
        "source": "./artifacts/id_rsa",
        "destination": "/tmp/id_rsa"
      },
      {
        "type": "file",
        "source": "../roles/prepare-oob-server/files/ansible.cfg",
        "destination": "/tmp/ansible.cfg"
      },
      {
        "type": "file",
        "source": "../roles/prepare-oob-server/files/rc.local",
        "destination": "/tmp/rc.local"
      },
      {
        "type": "file",
        "source": "../roles/switch-netq/files/netq.yml",
        "destination": "/tmp/netq.yml"
      },
      {
        "type": "shell",
        "inline": [
          "hostnamectl set-hostname oob-mgmt-server",
          "mkdir /home/cumulus/.ssh",
          "cp /tmp/authorized_keys /home/cumulus/.ssh/authorized_keys",
          "mv /tmp/authorized_keys /home/cumulus/.ssh/id_rsa.pub",
          "mv /tmp/id_rsa /home/cumulus/.ssh/id_rsa",
          "chown cumulus:cumulus /home/cumulus/.ssh",
          "chmod 400 /home/cumulus/.ssh/id_rsa",
          "echo 'cumulus ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/10_cumulus",
          "mv /tmp/jessie.list /etc/apt/sources.list.d/jessie.list",
          "echo 'deb http://apps3.cumulusnetworks.com/repos/deb CumulusLinux-3 netq-latest' >> /etc/apt/sources.list",
          "apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 7EB364B4A88BBC95",
          "apt update -o Acquire::ForceIPv4=true",
          "apt install python-dev libssl-dev sshpass build-essential libffi-dev isc-dhcp-server tree apache2 git cumulus-netq python-pip dnsmasq vim -y -o Acquire::ForceIPv4=true",
          "echo 'UseDNS no' >> /etc/ssh/sshd_config",
          "sed -i 's/sleep [0-9]*/sleep 1/' /etc/init/failsafe.conf 2>/dev/null || true",
          "pip install 'setuptools<45.0.0' pip wheel --upgrade",
          "pip install ansible=={{user `ansible_version`}}",
          "systemctl enable dhcpd",
          "mv /tmp/netq.yml /etc/netq/netq.yml",
          "netq config restart agent",
          "netq config restart cli",
          "mv /tmp/rc.local /etc/rc.local",
          "chmod 755 /etc/rc.local",
          "mkdir /etc/ansible/",
          "mv /tmp/ansible.cfg /etc/ansible/ansible.cfg"
        ],
        "execute_command": "echo {{user `ssh_password`}} | sudo -S sh -c '{{ .Path }}'"
      },
      {
        "type": "ansible",
        "playbook_file": "../setup.yaml",
        "groups": "oob-server"
      }
    ]
  }
